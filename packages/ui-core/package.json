{
  "name": "@gridcore/ui-core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external @gridcore/core && tsc --declaration --emitDeclarationOnly --outDir dist && cp ../../gridcore-rs/gridcore-controller/pkg/*.wasm ./dist/ 2>/dev/null || true",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist node_modules coverage",
    "generate:state-docs": "bun run scripts/generateStateDocs.ts",
    "view:state-diagram": "bun run scripts/viewStateDiagram.ts"
  },
  "dependencies": {
    "@gridcore/core": "workspace:*",
    "gridcore-controller": "file:../../gridcore-rs/gridcore-controller/pkg"
  },
  "optionalDependencies": {
    "gridcore-controller": "file:../../gridcore-rs/gridcore-controller/pkg"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
