{
  "name": "@gridcore/ui-web",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:rust": "USE_RUST_CONTROLLER=true vite",
    "build": "tsc && vite build",
    "build:rust": "USE_RUST_CONTROLLER=true tsc && USE_RUST_CONTROLLER=true vite build",
    "preview": "vite preview",
    "preview:rust": "USE_RUST_CONTROLLER=true vite preview",
    "typecheck": "tsc --noEmit",
    "test": "bun test src",
    "test:unit": "bun test src",
    "test:unit:rust": "USE_RUST_CORE=true bun test src",
    "test:e2e": "playwright test",
    "test:e2e:rust": "USE_RUST_CORE=true playwright test",
    "test:ui": "playwright test --ui",
    "test:ui:rust": "USE_RUST_CORE=true playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "clean": "rm -rf dist node_modules coverage .next out playwright-report test-results"
  },
  "dependencies": {
    "gridcore-wasm": "file:../../gridcore-rs/gridcore-wasm/pkg",
    "gridcore-controller": "file:../../gridcore-rs/gridcore-controller/pkg"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.9.0",
    "@playwright/test": "^1.48.0",
    "@types/bun": "^1.2.19",
    "happy-dom": "^18.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  }
}
