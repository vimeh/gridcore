{
  "name": "@gridcore/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bunx tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist node_modules coverage",
    "bench": "bun run benchmarks/index.ts",
    "bench:cell": "bun run benchmarks/index.ts --suite 'Cell Operations'",
    "bench:formula": "bun run benchmarks/index.ts --suite 'Formula Calculations'",
    "bench:batch": "bun run benchmarks/index.ts --suite 'Batch Operations'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
