{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "gridcore-desktop",
  "version": "0.0.1",
  "identifier": "com.gridcore.desktop",
  "build": {
    "frontendDist": "../../ui-web/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd ../ui-web && bun run dev",
    "beforeBuildCommand": "cd ../ui-web && bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "GridCore Desktop",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
