{
  "name": "gridcore",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun test packages/core && bun test packages/ui-web/src",
    "test:all": "bun test packages/core && bun test packages/ui-web/src && bun run --cwd packages/ui-web test:e2e",
    "typecheck": "bun run --filter '*' typecheck",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "biome": "^0.3.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "jsdom": "^26.1.0"
  }
}
